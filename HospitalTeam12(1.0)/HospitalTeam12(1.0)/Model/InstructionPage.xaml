<Window x:Class="HospitalTeam12.Model.InstructionPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalTeam12.Model"
        mc:Ignorable="d"
        Title="InstructionPage" Height="450" Width="800">
    <Grid>
        <ComboBox Name="Ins" HorizontalAlignment="Left" Margin="347,26,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Ins_SelectionChanged"/>
        <DataGrid x:Name="dataGridExamination" ItemsSource="{Binding Path=ExamBindings}" IsReadOnly="true" Margin="27,71,20,88" SelectionChanged="DataGrid_SelectionChanged"/>
        <Button Name="Submit" Content="Submit" HorizontalAlignment="Left" Margin="359,378,0,0" VerticalAlignment="Top" Height="41" Width="97" Click="Button_Click_Submit"/>
        <Button Content="Show" HorizontalAlignment="Left" Margin="533,17,0,0" VerticalAlignment="Top" Click="Button_Click" Height="40" Width="90"/>

    </Grid>
</Window>
